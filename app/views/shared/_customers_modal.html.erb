<div class="modal fade" id="customersModal" tabindex="-1" role="dialog" aria-labelledby="customersModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">add products to cart</h4>
      </div>
      <div class="modal-body">
        <table class="table table-striped">
          <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Since</th>
            <th>Balance</th>
            <th>Contact</th>
            <th>Telephone</th>
            <th>Select</th>
          </tr>

          <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.name %></td>
            <td><%= customer.address %></td>
            <td><%= customer.since %></td>
            <td><%= customer.balance %></td>
            <td><%= customer.contact %></td>
            <td><%= customer.telephone %></td>
            <!-- <td> <button onmousedown="selectCustomer(this)">Select</button> <td> -->
            <!--<td><%= link_to 'Select', new_order_path, :remote => true %></td>  -->
            <td><%= link_to 'Select', {:controller =>'orders',:action => 'new',:customer_id =>customer.id}, :remote => true %></td>
          </tr>

          <% end %>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
