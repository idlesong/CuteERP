<div class="modal fade" id="rescheduleModal" tabindex="-1" role="dialog"
                        aria-labelledby="rescheduleModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel"><%=t(:add_ship_status)%> </h4>
      </div>
      <div class="modal-body">
          <%= form_tag(sales_orders_path, :method => 'put', :id => 'ship_status') do %>
            <div>
              <%= hidden_field :sales_order, :delivery_status => 'reschedule' %> 
              <%= date_select :sales_order, :delivery_plan,:class => 'date_select'%></br></br>
              <%= submit_tag 'Re-schedule' %>
            </div>
          <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

