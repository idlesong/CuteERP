<%- model_class = Quotation -%>
<div class="page-header">
  <h1><%=t(:quotation) %></h1>
</div>

<p id="notice"><%= notice %></p>

<table class="table table-striped datatable">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th>Quotation number</th>
      <th>Customer</th>
      <th> overview </th>
      <th>Remark</th>
      <th>created_at</th>
      <th colspan="3">action</th>
    </tr>
  </thead>

  <tbody>
    <% @quotations.each do |quotation| %>
      <tr>
        <td><%= link_to quotation.id, quotation %></td>      
        <td><%= quotation.quotation_number %></td>
        <td><%= quotation.customer.name %></td>
        <td><%= quotation.get_items_overview %></td>
        <td><%= quotation.remark %></td>
        <td><%= quotation.created_at.strftime("%F") %></td>
        <td><%= link_to 'Show', quotation %></td>
        <td><%= link_to 'Edit', edit_quotation_path(quotation) %></td>
        <td><%= link_to 'Destroy', quotation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_quotation_path,
            :class => 'btn btn-primary' %>