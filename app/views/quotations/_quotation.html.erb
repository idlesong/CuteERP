<!-- Quotation header -->
  <div class="panel panel-default">
    <div class="panel-body">
      <h2>
        <%=image_tag('sicomm_logo.jpg') %>无锡士康通讯技术有线公司
      </h2>
      <table class="table">
        <thead>
          <tr>
            <td>
              <h5>Wuxi Sicomm Communication Tech</h5>
              <h5>Address: B building #21 road, Wuxi </h5>
              <h5>Tel:051066682208 Fax: 051066682208</h5>
            </td>
            <td>
              <h4 class="text-right"> Date: <%=t(:show_date)%>:<%= DateTime.now.to_date %></h4>
              <h4 class="text-right"> Quotation#:<%= @quotation.quotation_number %></h4>
              <h4 class="text-right"> Payment:<%= @quotation.customer_id %></h4>
