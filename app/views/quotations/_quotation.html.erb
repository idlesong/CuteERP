          </tr>
        </thead>
        <tr><td colspan = "2"><h3 class="text-center"> Quotation</h3></td></tr>
        <tr><td> <h4>ATTN: <%=t(:bill_to)%>:<%= @quotation.customer.name %>  </h4> </td>
