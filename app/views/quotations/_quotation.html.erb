        </tr>
      </table>

    </div>
  </div>

<!-- Quotation price list -->
<div class="panel panel-default">
  <div class="panel-body">
    <table class="table">
      <thead> <tr> 
      <td> id </td>
      <td> part number</td>
      <td> product name</td>
      <td> unit price </td>
      <td> order_quantity </td>
      <td> note </td> 
      </tr> </thead>
      <% @quotation.prices.each_with_index do |price, index| %>
        <tr>
        <td><%= index+1 %></td>     
        <td><%= price.item.partNo %></td>
        <td><%= price.item.name %></td>
        <td>RMB <%= price.price %></td>
        <td><%= price.condition %> pcs</td>
        <td></td>
        </tr>
      <% end %>
      <tr><td>remark</td><td colspan="5"><%= @quotation.remark %></td></tr>
    </table>
  </div>  
</div>
