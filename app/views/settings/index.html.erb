<h1>Listing settings</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Value</th>
    <th>Note</th>
    <th></th>
  </tr>

<% @settings.each do |setting| %>
  <tr>
    <td><%= setting.name %></td>
    <td><%= setting.value %></td>
    <td><%= setting.note %></td>
    <td><%= link_to 'Show', setting %>
    <%= link_to 'Edit', edit_setting_path(setting) %>
    <%= link_to 'Destroy', setting, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Setting', new_setting_path,:class=>"btn btn-primary" %>
