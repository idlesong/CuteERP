<p id="notice"><%= notice %></p>
<h1>Customer Order</h1>

<div class="panel panel-default">
  <!-- <div class="panel-heading"><h3>Customer Order<h3></div> -->
  <div class="panel-body">

    <h2>
      <%= @order.customer.name %>
    </h2>
    <table class="table">
      <thead>
        <tr>
          <td>
          </td>
          <td>
            <h4 class="text-right"> Date: <%= @order.created_at.to_date %></h4>
            <h4 class="text-right"> PO#:
              <% if @order.document_file_size %>
                <%= link_to(@order.order_number, @order.document.url, target: "_blank")%>
              <% else %>
                <%= @order.order_number %>
              <% end %>

            </h4>
            <h4 class="text-right"> Payment:<%= @order.pay_type %></h4>
          </td>
        </tr>
      </thead>
      <tr><td colspan = "2"><h3 class="text-center"> Customer Order</h3></td></tr>
      <tr><td><h4>Bill to: <%= @order.customer.name %></h4></td>
          <td><h4> Ship to: <%= @order.customer.name %></h4></td></tr>

      </tr>
      <tr><td>Contact:<%= @order.name %></td> <td>Contact:<%= @order.ship_contact %></td></tr>
      <tr><td>Address:<%= @order.address %></td><td>Address:<%= @order.ship_address %></td></tr>
      <tr><td>Tel:<%= @order.telephone %></td><td>Tel:<%= @order.ship_telephone %></td></tr>
      <!-- <tr>
        <td>Payment:<%= @order.customer.payment %></td>
        <td>Date: 20140501</td>
      </tr> -->
    </table>

  </div>
</div>

<div class="panel panel-default">
  <!-- <div class="panel-heading"><h2>Order Details<h2></div> -->
  <div class="panel-body">
    <%= render(@order) %>
  </div>

  <div class="panel-footer">
    <%= link_to 'Edit', edit_order_path(@order) %>

    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                order_path(@order),
                :method => :delete,
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-mini btn-danger' %>

  <button type="button" class="btn btn-link btn-primary" data-toggle="modal"
    data-target=".bs-quotation-modal-lg">Print Quotation</button> |

   <%= link_to "Issue sales order", new_sales_order_path(:customer_id => @order.customer.id) %>
  </div>
</div>


<%= render("quotation_modal")%>
