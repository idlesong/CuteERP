<%= render 'shared/customers_modal' %>
<%= render 'shared/products_modal' %>

<h1> Customer Order </h1>
<div id="orderHeaderDiv">
	<%= render 'orderHeader' %>
</div>

<div class="panel panel-default">
	<div class="panel-heading">
		<h4> Order details </h4>
	</div>
	<div class="panel-body">
		<a type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#productsModal">
			SelectProduct
		</a>
		<div id="cart">
			<%= render @cart %>
		</div>
	</div>
</div>

<div class="panel panel-default">
	<div class="panel-heading">
		<h4>Please Confirm dispatch info and place order</h4>
	</div>
	<div class="panel-body">
		<%= render 'form' %>
	</div>
</div>
