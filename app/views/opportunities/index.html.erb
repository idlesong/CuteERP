<%- model_class = Opportunity -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<table id="opportunities" class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:customer_id) %></th>
      <th><%= model_class.human_attribute_name(:project_type) %></th>
      <th><%= model_class.human_attribute_name(:solution) %></th>
      <th><%= model_class.human_attribute_name(:note) %></th>
      <th>status</th>
      <th>issue</th>
      <th>date</th>
      <th><%= model_class.human_attribute_name(:priority) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @opportunities.each do |opportunity| %>
      <tr>
        <td><%= link_to opportunity.id, opportunity_path(opportunity) %></td>
        <td><%= link_to opportunity.customer.name, customer_path(opportunity.customer)  %></td>
        <td><%= opportunity.project_type %></td>
        <td><%= opportunity.solution %></td>
        <td><%= opportunity.note %></td>
        <td><%= opportunity.oppostatuses.first.status %></td>
        <td><%= opportunity.oppostatuses.first.issue %></td>
        <td><%= opportunity.created_at.strftime("%Y/%m/%d") %></td>
        <td><%= opportunity.priority %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_opportunity_path(opportunity), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      opportunity_path(opportunity),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_opportunity_path,
            :class => 'btn btn-primary' %>
