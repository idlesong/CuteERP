<h3>Listing opportunities</h3>

<table class="pure-table">
  <thead>
    <tr>
      <th>Priority</th>
      <th>Project type</th>
      <th>Solution</th>
      <th>Note</th>
      <th>Company</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

<% @opportunities.each do |opportunity| %>
  <tr>
    <td><%= best_in_place opportunity, :priority, :type => :input %></td>
    <td><%= best_in_place opportunity, :project_type, :type => :select, :collection => [["DigitalWT","DigitalWT"],["WirelessData","WirelessData"],["激光测距仪","激光测距仪"],["WirelessMic","WirelessMic"]] %></td>
    <td><%= best_in_place opportunity, :solution, :type => :input %></td>
    <td><%= opportunity.note %></td>
    <td><%= best_in_place opportunity, :customer_id, :type => :input %></td>
    <td><%= link_to 'Show', opportunity %></td>
    <td><%= link_to 'Edit', edit_opportunity_path(opportunity) %></td>
    <td><%= link_to 'Destroy', opportunity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

