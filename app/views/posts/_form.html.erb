<%= form_for @post, :html => { :multipart => true } do |f| %>

  <% if @post.errors.any? %>
  <div id="error_explanation" class="alert alert-danger" role="alert">
    <h2><%= pluralize(@post.errors.count, "error") %> <%=t(:prohibited_save)%>:</h2>

    <ul>
      <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="panel panel-default">
    <div class="panel-body">
      <%= f.label :title, :class => 'control-label' %>
      <%= f.text_field :title, :class => 'text_field' %>
      <%= f.label :subject, :class => 'control-label' %>
      <%= f.select(:subject,[['Suppliers'],['Products'],['Customers'],
                            ['Marketing'],['R&D'],['Sales'],['Others']]) %>
      <%= f.label :internal_url, :class => 'control-label' %>
      <%= f.text_field :internal_url, :class => 'text_field' %>
      </br>
      <div class="">
        <%= f.text_area :content, :rows =>50, :cols => 148 %>
      </div>

      <div class="field">
        <%= f.label "Add attachments" %><br>
        <%= file_field_tag "documents", type: :file, multiple: true %>
      </div>

    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                posts_path, :class => 'btn' %>
  </div>
  </br>
<% end %>
