<!DOCTYPE html>
<html>
<head>
  <title>WebERP System Online</title>
  <%= stylesheet_link_tag    "scaffold" %>
  <%= stylesheet_link_tag    "inventory" %>
  <%= stylesheet_link_tag    "items", "rorweberp",:all, :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tags %>
</head>
<body id="inventory">
	<div id = "banner">
		<%= image_tag("rails.png")%>
		<%= @page_title || "Online Web ERP System" %>
	</div>

	<div id = "columns">
		<div id = "side">
			<div id="side">
				<% if @cart %>
					<%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
						<%= render @cart %>
					<% end %>
				<% end %>	
			</div>
			
			<a href="http://www....">Home</a><br />
			<a href="http://www....">Itmes</a><br />
			<a href="http://www....">Customers</a><br />
			<a href="http://www....">Inventory</a><br />

			<% if session[:user_id] %>
			  <br />
			  <%= link_to 'Orders', orders_path %> <br />
			  <%= link_to 'Items', items_path %> <br />
			  <%= link_to 'Users', users_path %> <br />
			  <br />
			  <%= button_to 'Logout', logout_path, :methold => :delete %>
			<% end %>
		</div>
		<div id="main">
			<%= yield %>
		</div>
	</div>



</body>
</html>
