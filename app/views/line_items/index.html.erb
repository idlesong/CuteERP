<h1>Listing line_items</h1>

<table class="table">
  <tr>
    <th> ID </th>
    <th>Item</th>
    <th>Price</th>
    <th>Qty</th>
    <th>Qty issued</th>
    <th>line type</th>
    <th>line id</th>
    <th>refer line id</th>
    <th>cart id</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @line_items.each do |line_item| %>
  <tr>
    <td>#<%= line_item.id %></td>
    <td><%= line_item.item_id %></td>
    <td><%= line_item.price %></td>
    <td>x<%= line_item.quantity %></td>
    <td><%= line_item.quantity_issued %></td>
    <td><%= line_item.line_type %></td>
    <td><%= line_item.line_id %></td>
    <td><%= line_item.refer_line_id %></td>
    <td><%= line_item.cart_id %></td>    
    <td><%= link_to 'Show', line_item %></td>
    <td><%= link_to 'Edit', edit_line_item_path(line_item) %></td>
    <td><%= link_to 'Destroy', line_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

