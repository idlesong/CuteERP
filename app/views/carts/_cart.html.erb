<!-- <div class="cart_title"> Cart </div> -->
<table class="table">
	<thead>
		<tr>
			<th><h4>#</h4></th>
			<th><h4>Product name</h4></th>
			<th><h4>PartNo.</h4></th>
			<th><h4>Qty</h4></th>
			<th><h4>Price</h4></th>
			<th><h4>Suble Total</h4></th>
			<th><h4>Remark</h4></th>
		</tr>
	</thead>
	<% 	if current_cart_currency == 'RMB'
        currency_unit = 'Â¥'
    	else
        currency_unit = '$'
      end %>
	<% @cart.line_items.each do |line_item| %>
		<tr>
			<td>1 </td>
			<td><%= line_item.item.name %> </td>
			<td><%= line_item.item.partNo %> </td>
			<td><%= line_item.quantity %> </td>
			<% line_price = line_item.show_currency_price(current_cart_exchange_rate, current_cart_currency) %>
			<td><%= number_to_currency(line_price, unit: currency_unit) %> </td>
	    <td><%= number_to_currency(line_item.total_currency_price(current_cart_exchange_rate,
								current_cart_currency), unit: currency_unit) %></td>
			<td><%= link_to 'Destroy', line_item, method: :delete, remote: true %></td>
		</tr>
	<% end %>
		<tr>
			<td colspan="7"><a type="button" class="btn btn-primary btn-sm" data-toggle="modal"
				data-target="#productsModal"> Add products to order </a></td>
		</tr>

	<tr><td colspan="7"> <strong>Remarks:</strong>
		<%= "Exchange rate: #{current_cart_exchange_rate}" if currency_unit == '$' %>
	</td></tr>
</table>
