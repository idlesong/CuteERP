<%- model_class = Price -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped datatable">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:customer_id) %></th>
      <th><%= model_class.human_attribute_name(:payment_terms) %></th>
      <th>Part No.</th>
      <th>Default</th>
      <th>Price</th>
      <th>Condition</th>
      <th>Status </th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
    </tr>
  </thead>
  <tbody>
    <% @prices.each do |price| %>
      <tr>
        <td><%= link_to price.id, price_path(price) %></td>
        <td><%= price.customer.short_name %></td>
        <td><%= price.payment_terms %></td>
        <td><%= price.item.partNo %></td>
        <td>¥<%= price.item.price %></td>
        <td><strong>¥<%= price.price %></strong></td>
        <td><%= price.condition %> </td>
        <td><%= price.status %></td>
        <td><%= price.created_at.strftime("%F") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_price_path,
            :class => 'btn btn-primary' %>
