<%- model_class = Price -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:item_id) %></th>
      <th><%= model_class.human_attribute_name(:customer_id) %></th>
      <th>price/limit price</th>
      <th><%= model_class.human_attribute_name(:payment_terms) %></th>
      <th><%= model_class.human_attribute_name(:condition) %></th>
      <th><%= model_class.human_attribute_name(:sales_suggestion) %></th>
      <th><%= model_class.human_attribute_name(:department_suggestion) %></th>
      <th><%= model_class.human_attribute_name(:finance_suggestion) %></th>
      <th><%= model_class.human_attribute_name(:boss_suggestion) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @prices.each do |price| %>
      <tr>
        <td><%= link_to price.id, price_path(price) %></td>
        <td><%= price.item.name %> - <%= price.item.partNo %></td>
        <td><%= price.customer.name %></td>
        <td><%= price.price %>/<%=price.item.price %></td>
        <td><%= price.payment_terms %></td>
        <td><%= price.condition %></td>
        <td><%= price.sales_suggestion %></td>
        <td><%= price.department_suggestion %></td>
        <td><%= price.finance_suggestion %></td>
        <td><%= price.boss_suggestion %></td>
        <td><%=l price.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_price_path(price), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      price_path(price),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_price_path,
            :class => 'btn btn-primary' %>
