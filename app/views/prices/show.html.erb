<%- model_class = Price -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="panel panel-default">
  <div class="panel-body">
    <table class="table table-bordered">
      <tr><td colspan="4"><h2 class="text-center">Price Request </h2>
 </td></tr>
      <tr><td class="active">Customr Name</td><td><%= @price.customer.name %></td>
          <td class="active">Request Date</td><td><%= @price.created_at.to_date %></td></tr>
      <tr><td class="active">Product </td><td><%= @price.item.name %><%= @price.item.partNo %></td>
          <td class="active">payment term</td><td><%= @price.customer.payment %></td></tr>
      <tr><td class="active">Default Price</td><td>¥<%= @price.item.price %></td>
          <td class="active">Last price</td><td>¥</td></tr>
      <tr><td class="active">Request Price</td><td class="danger">¥<%= @price.price %></td>
          <td class="active">Forecast/y,condition</td><td class="danger"><%= @price.condition %></td></tr>
      <tr><td class="active">Sales suggestion</td><td colspan="3"><%= @price.sales_suggestion %></td></tr>
      <tr><td class="active">Department suggestion</td><td colspan="3"><%= @price.department_suggestion %></td></tr>
      <tr><td class="active">finance suggestion</td><td colspan="3"><%= @price.finance_suggestion %></td></tr>
      <tr><td class="active">Boss suggestion</td><td colspan="3"><%= @price.boss_suggestion %></td></tr>
      <tr><td colspan="4"><p class="text-center"><%= @price.status %></p></td></tr>
    </table>

    <div >
      <%= link_to t('.print'), prices_path, :class => 'btn btn-primary'  %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_price_path(@price), :class => 'btn' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  price_path(@price),
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-danger' %>
    </div>
  </div>
</div>



</br>
</br>
<h1> Price in traditional form </h1>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:item_id) %>:</strong></dt>
  <dd><%= @price.item.name %> - <%= @price.item.partNo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:customer_id) %>:</strong></dt>
  <dd><%= @price.customer.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @price.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:payment_terms) %>:</strong></dt>
  <dd><%= @price.payment_terms %></dd>
  <dt><strong><%= model_class.human_attribute_name(:condition) %>:</strong></dt>
  <dd><%= @price.condition %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sales_suggestion) %>:</strong></dt>
  <dd><%= @price.sales_suggestion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:department_suggestion) %>:</strong></dt>
  <dd><%= @price.department_suggestion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:finance_suggestion) %>:</strong></dt>
  <dd><%= @price.finance_suggestion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:boss_suggestion) %>:</strong></dt>
  <dd><%= @price.boss_suggestion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @price.status %></dd>
</dl>



<div class="form-actions">
  <%= link_to t('.print requst'), prices_path, :class => 'btn btn-primary'  %>
  <%= link_to t('.back', :default => t("helpers.links.back")),
              prices_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_price_path(@price), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              price_path(@price),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

</br>
