<p id="notice"><%= notice %></p>
<h1>Sales Order</h1>

<div class="panel panel-default">
  <!-- <div class="panel-heading"><h3>Customer Order<h3></div> -->
  <div class="panel-body">

    <h2>
      <%=image_tag('sicomm_logo.jpg') %>无锡士康通讯技术有线公司
    </h2>
    <table class="table">
      <thead>
        <tr>
          <td>
            <h5>Wuxi Sicomm Communication Tech</h5>
            <h5>Address: B building #21 road, Wuxi </h5>
            <h5>Tel:051066682208 Fax: 051066682208</h5>
          </td>
          <td>
            <h4 class="text-right"> Order Date: <%= @sales_order.created_at.to_date %></h4>
            <h4 class="text-right"> PO#:<%= @sales_order.serial_number %></h4>
            <h4 class="text-right"> Payment:<%= @sales_order.payment_term %></h4>
            <h4 class="text-right"> Ship Date:<%= @sales_order.delivery_date.to_date if @sales_order.delivery_date%></h4>
          </td>
        </tr>
      </thead>
      <tr><td colspan = "2"><h3 class="text-center"> Sales Order</h3></td></tr>
      <tr><td><h4>Bill to: <%= @sales_order.customer.name %></h4></td>
          <td><h4> Ship to: <%= @sales_order.customer.name %></h4></td></tr>

      </tr>
      <tr><td><strong>Contact:</strong><%= @sales_order.bill_contact %></td>
          <td><strong>Contact:</strong><%= @sales_order.ship_contact %></td></tr>
      <tr><td><strong>Address:</strong><%= @sales_order.bill_address %></td>
          <td><strong>Address:</strong><%= @sales_order.ship_address %></td></tr>
      <tr><td><strong>Tel:  </strong><%= @sales_order.bill_telephone %></td>
          <td><strong>Tel:  </strong><%= @sales_order.ship_telephone %></td></tr>
    </table>

  </div>
</div>

<div class="panel panel-default">
  <!-- <div class="panel-heading"><h2>Order Details<h2></div> -->
  <div class="cart_title"> Order details </div>
  <table class="table">
  	<thead>
  		<tr>
  			<th><h4>#</h4></th>
  			<th><h4>Product name</h4></th>
  			<th><h4>PartNo.</h4></th>
  			<th><h4>Qty</h4></th>
  			<th><h4>Price</h4></th>
  			<th><h4>Suble Total</h4></th>
  		</tr>
  	</thead>
  	<%= render(@sales_order.line_items) %>
  </table>

  <div class="panel-footer">
    <button type="button" class="btn btn-link btn-primary" data-toggle="modal"
      data-target=".bs-invoice-modal-lg">Print Invoice</button> |
    <button type="button" class="btn btn-link btn-primary" data-toggle="modal"
      data-target=".bs-packing-modal-lg">Print Packing List</button>
  </div>
</div>

<%= render('invoice') %>
<%= render('packing_list') %>
